    <div class="avatar">
      <div class="w-96 h-96 rounded-full">
        <%= image_tag "#{@profile.image}", size: '350x270' %>
      </div>
    </div>
    <h1 class='font-bold text-2xl pt-2'>
      ユーザー名：<%= @profile.name %>
