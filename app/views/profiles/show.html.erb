<div class="bg-blue-900 w-full h-screen text-white overflow-hidden flex items-center justify-center">
  <div class="w-11/12 md:w-3/4 lg:w-1/2 border border-white p-6 rounded-lg shadow-lg flex flex-col items-center">
    <div class="avatar flex flex-col items-center">
      <div class="w-40 h-40 md:w-48 md:h-48 rounded-full overflow-hidden mb-4">
        <% if @profile.avatar.present? %>
          <%= image_tag @profile.avatar, class: "object-cover w-full h-full" %>
        <% else %>
          <%= image_tag "default.jpg", class: "object-cover w-full h-full" %>
        <% end %>
      </div>
      <div class="text-center">
        <% if current_user === @profile.user %>
          <div class="mt-4">
            <%= link_to 'プロフィール編集', edit_profile_path, class: "badge badge-lg badge-primary" %>
          </div>
        <% end %>
        <h1 class="font-bold text-2xl md:text-3xl mt-3">
          <%= @profile.name %>
        </h1>
        <h1 class="font-bold text-xl md:text-2xl mt-1">
          <%= I18n.t("enums.profile.gender.#{@profile.gender}") %>
        </h1>
      </div>
    </div>
    <div class="divider divider-primary">ひとこと</div>
    <h1 class="w-full font-bold text-xl md:text-2xl pt-2 pb-2 text-center">
      <%= @profile.body %>
    </h1>
  </div>
</div>


