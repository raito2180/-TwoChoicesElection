<div class="bg-blue-900 w-full md:h-screen text-white overflow-hidden">
  <div class="flex justify-center aspect-video m-5 ">
    <iframe src="https://www.youtube.com/embed/<%= params[:id] %>" frameborder="0" allowfullscreen class='w-96 h-96 md:w-2/3 md:h-screen'></iframe>
  </div>
</div>
<div class="bg-blue-900 w-full text-white">
  <div class='flex flex-col m-5 md:text-4xl items-center justify-center '>
    <p class='mx-4'><%= params[:title] %></p>
    <div class='flex-col md:text-4xl'>
      <p class='mx-4'>チャンネル名:<%= params[:channel_title] %></p>
      <p class='mx-4'>再生回数:<%= params[:view_count] %>回</p>
    </div>
  </div>
  <div class='flex flex-col md:flex-row md:text-4xl justify-center m-5'>
    <div class='mx-12 my-2 btn btn-neutral md:w-60'>
      <%= link_to "https://twitter.com/share?url=https://stardom-jonn.onrender.com&text=文章%0a%0a【Stardom】で#{params[:title]}を見たよ！！", target: '_blank' do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-twitter-x" viewBox="0 0 16 16">
          <path d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865z"/>
        </svg>
      <% end %>
    </div>
    <% if user_signed_in? %>
      <div class='mx-12 my-2 btn btn-accent md:w-60'>
        <%= link_to '蹴りに行く？', posts_path %>
      </div>
    <% end %>
    <div class='mx-12 my-2 btn btn-primary md:w-60'>
      <%= link_to '動画検索TOP', videos_path %>
    </div>
  </div>
</div>